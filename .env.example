# ==============================================================================
# VR-Travel Frontend Configuration
# ==============================================================================

# ------------------------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------------------------
# Base URL for the API (should match VRTravel_API backend)
VITE_API_URL=http://localhost:5000

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# ------------------------------------------------------------------------------
# Authentication & Storage
# ------------------------------------------------------------------------------
# Local storage keys for authentication
VITE_AUTH_TOKEN_KEY=vr_travel_auth_token
VITE_USER_DATA_KEY=vr_travel_user_data

# ------------------------------------------------------------------------------
# Hugging Face Configuration
# ------------------------------------------------------------------------------
# Hugging Face API token for accessing datasets
VITE_HUGGING_FACE_API_KEY=your_huggingface_token_here

# Dataset repository ID
VITE_HUGGING_FACE_DATASET_REPO=XuanHuy224/GaussianSample

# Base URL for Hugging Face datasets
VITE_HUGGING_FACE_BASE_URL=https://huggingface.co/datasets/XuanHuy224/GaussianSample/resolve/main

# Default folder in the dataset
VITE_HUGGING_FACE_SAMPLE_FOLDER=Gaussian

# ------------------------------------------------------------------------------
# File Upload Configuration
# ------------------------------------------------------------------------------
# Maximum file size in bytes (10MB)
VITE_MAX_FILE_SIZE=10485760

# Accepted image formats (comma-separated)
VITE_ACCEPTED_IMAGE_FORMATS=image/jpeg,image/jpg,image/png,image/webp

# Supported 3D model formats
VITE_SUPPORTED_MODEL_FORMATS=.splat,.ply

# ------------------------------------------------------------------------------
# 3D Model Configuration
# ------------------------------------------------------------------------------
# Default model URL for testing
VITE_DEFAULT_MODEL_URL=https://huggingface.co/datasets/dylanebert/3dgs/resolve/main/bonsai/bonsai-7k-mini.splat

# ------------------------------------------------------------------------------
# Environment & Debug
# ------------------------------------------------------------------------------
# Current environment
VITE_NODE_ENV=development

# Enable debug mode
VITE_DEBUG_MODE=true

# Enable console logs
VITE_ENABLE_LOGS=true
